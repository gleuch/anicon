!!! 5
%html
%head
  %title= page_title
  = stylesheet_link_tag :all
  = javascript_include_tag :defaults
  = csrf_meta_tag

%body{:class => "#{controller_name} #{controller_name}_#{action_name}"}
  #content_area
    #content
      #container
        #header
          %h1 Resize your animated GIF for Twitter.
          %h3 Add some flair and animate your Twitter dashboard with your animated avatar.

        = render 'globals/flashes'

        = yield

        #footer
          = render 'globals/footer'

  = render 'globals/template_footer'